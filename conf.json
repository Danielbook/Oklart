{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc","closure"]
  },
  "source": {
    "include": [ "src/public/javascripts/" ],
    "exclude": [ "node_modules/", "src/public/bower_component/", "src/node_modules/" ],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "destination": "./docs/"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": false,
    "theme": "simplex",
    "linenums": true,
    "monospaceLinks": false
  }
}